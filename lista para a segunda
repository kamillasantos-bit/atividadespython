#6
números = [1, 2, 3, 2, 4, 2, 5]

quantidade = números.count(2)

print("O número 2 aparece", quantidade, "vezes na lista")

#7
Livros = ["O Quinze", "Duna", "Cinco Minutos", "O Pequeno Príncipe", "Barquinhos de papel", "Textos para tocar cicatrizes"]

for livro in Livros:
    print(f"O livro {livro} é interessante")

#8
idades = [12, 18, 25, 14, 30]

for idade in idades:
    if idade >= 18:
        print(idade)
#9
valores = [10, 20, 30, 40]
soma = sum(valores)  

print("A soma dos valores é:", soma)

#10
notas = [] 

for i in range(2): 
    print(f"Digite as 3 notas do aluno {i+1}:")
    aluno = []  
    
    for j in range(3):  
        nota = float(input(f"Nota {j+1}: "))  
        aluno.append(nota)  
    
    notas.append(aluno)  

for i in range(len(notas)):
    media = sum(notas[i]) / len(notas[i])
    print(f"Média do aluno {i+1}: {media:.2f}")
    
#11
import numpy as np

# Criando tabuleiro 8x8 vazio com list comprehension
tabuleiro = [["[ ]" for _ in range(8)] for _ in range(8)]

# Peças na ordem da primeira e última linha
linha_pecas = ["tor", "cav", "bis", "rai", "rei", "bis", "cav", "tor"]

# Colocando peças pretas (topo do tabuleiro)
tabuleiro[0] = linha_pecas.copy()
tabuleiro[1] = ["pea"] * 8

# Colocando peças brancas (embaixo do tabuleiro)
tabuleiro[6] = ["pea"] * 8
tabuleiro[7] = linha_pecas.copy()

# Imprimindo o tabuleiro com numpy para melhor visualização
np_tabuleiro = np.array(tabuleiro)

for linha in np_tabuleiro:
    print(" ".join(linha))
